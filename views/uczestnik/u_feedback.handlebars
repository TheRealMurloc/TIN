            <div class="content">
                <header>
                    <div class="contentTitle">
                        <h3>Feedback</h3>
                    </div>
                </header>
                <article>
                    <div class="page">
                        <form action="/api/feedback" id="form" method="POST">
                            <div class="settings">
                                <fieldset>
                                    <legend> Feedback </legend>
                                    <textarea name="feedback" id="komentarz" rows="5" cols="80" maxlength="255" placeholder="Wpisz tutaj swój feedback :D"></textarea>
                                    <div id="errorMessage" class="errorMessage"></div>
                                </fieldset>
                            </div>
                            <div id ="errorSummary"></div>
                            <div class="settings">
                                <input type="submit" value="Wyślij">
                            </div>
                        </form>
                    </div>
                </article>
            </div>
        </main>
        <div style="clear: both;"></div>

    </div>
    <footer>
        <div class="footer">
            <div class="icons">
                <a href="https://www.youtube.com/?hl=pl&gl=PL" target="_blank">
