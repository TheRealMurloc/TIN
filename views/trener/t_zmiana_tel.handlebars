                <article>
                    <div class="page">
                        <form action="/api/osoba/update/{{user.id_osoby}}" id="form" method="post">
                            <div class="settings">
                                <fieldset>
                                    <legend> Numer telefonu </legend>
                                    <input type="tel" class="form" id="tel" name="telefon" placeholder="Wpisz swój nowy numer telefonu">
